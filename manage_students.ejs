                <table id="datatable" class="table table-striped table-bordered" cellspacing="0" width="100%">
                  <thead>
                    <tr>
                      <th>Reg No</th>
                      <th>Name</th>
                      <th>Mobile No</th>
                      <th>Exam</th>
                      <th>Email</th>
                    </tr>
                  </thead>
                  <tfoot>
                    <tr>
                      <th>Reg No</th>
                      <th>Name</th>
                      <th>Mobile No</th>
                      <th>Exam</th>
                      <th>Email</th>
                    </tr>
                  </tfoot>
                  <tbody>
                    <% if(students!=null){
