                          <tr>
                            <td><%=students[i].reg_no%></td>
                            <td><%=students[i].stu_name%></td>
                            <td><%=students[i].mob_no%></td>
                            <td><%=students[i].exam_name%></td>
                            <td><%=students[i].email%></td>
                          </tr>
                        <%}
                        }
                    } %>
                  </tbody>
                </table>
