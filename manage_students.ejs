        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-body ">
                <form method="POST" action="/manage_students/add_student">
                  <% if ( msg.length > 0 ) { %>
                    <p>Message: <%= msg %> </p>
                  <% } %>

                  <input type="hidden" name="stu_id" id="stu_id" value="0">

                  <div class="row">
                    <div class="col-md-6">
                      <label>Enter the mobile number</label>
                      <div class="form-group">
                        <input class="form-control" required placeholder="Enter Mobile Number" id="mob" name="mob" type="number" pattern="\d{3}[\-]\d{3}[\-]\d{4}" autofocus><span id="message"></span>
                      </div>
                    </div>
                    <div class="col-md-6">
                      <label>Date of Birth</label>
                      <div class="form-group">
                        <input class="form-control" required name="date" type="date" id="dob">
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <label>Enter the Name of the Student</label>
                      <div class="form-group">
                        <input class="form-control" required placeholder="Enter Student name" id="name" name="name" type="text">
                      </div>
                    </div>
                    <div class="col-md-6">
                      <label>Enter Qualification</label>
                      <div class="form-group">
                        <input class="form-control" placeholder="Enter Quaification" id="qual" name="qualification" type="text">
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <label>Enter the email address</label>
                      <div class="form-group">
                        <input class="form-control" required placeholder="Enter Email Id" name="email" id="email" type="email">
                      </div>
                    </div>
                    <div class="col-md-6">
                      <label>Select the exam</label><br>
                      <select class="selectpicker" name="exam" id="exam" data-style="btn btn-primary btn-round" required>
                        <option disabled selected>Select Exam</option>
                        <% if(exam.length){
                          for(var i = 0;i < exam.length;i++) { %>
                            <option required value="<%=exam[i].exam_id%>~<%=exam[i].date%>"><%=exam[i].exam_name%></option>
                          <% }
                        } %>
                      </select>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-md-6">
                      <label>Enter the Aadhaar Number</label>
                      <div class="form-group">
                        <input class="form-control" required placeholder="Enter The Aadhar Number" id="aadhar" name="aadhar" type="text">
                      </div>
                    </div>
                  </div>

                  <div class="card-footer text-center">
                    <button type="submit" class="btn btn-fill btn-primary">Add Student</button>
                  </div>

                </form>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <button type="submit" id="myFunction" class="btn btn-fill btn-primary">View Students</button>
          </div>
          <div id="stu_list" class="col-md-12 col-lg-12" style="margin-top: 30px;">
            <div class="card">
