  <script>

    $('#stu_list').hide();

    $('#myFunction').click(function(){
      $('#stu_list').toggle(800);
    });
    

    $(document).ready(function() {
      $('#datatable').DataTable({
        "pagingType": "full_numbers",
        "lengthMenu": [
          [10, 25, 50, -1],
          [10, 25, 50, "All"]
        ],
        responsive: true,
        language: {
          search: "_INPUT_",
          searchPlaceholder: "Search records",
        }

      });

      var table = $('#datatable').DataTable();

      // Edit record
      table.on('click', '.edit', function() {
        $tr = $(this).closest('tr');
        if ($($tr).hasClass('child')) {
          $tr = $tr.prev('.parent');
        }

        var data = table.row($tr).data();
        alert('You press on Row: ' + data[0] + ' ' + data[1] + ' ' + data[2] + '\'s row.');
      });

      // Delete a record
      table.on('click', '.remove', function(e) {
        $tr = $(this).closest('tr');
        if ($($tr).hasClass('child')) {
          $tr = $tr.prev('.parent');
        }
        table.row($tr).remove().draw();
        e.preventDefault();
      });

      //Like record
      table.on('click', '.like', function() {
        alert('You clicked on Like button');
      });
    });


    $("#mob").keyup(function(){
         var mob = $(this).val();
         if(mob.length==10)
         {
           var message = document.getElementById('message');
           message.innerHTML = "";
           $.ajax({
              type: "POST",
              data: {mob: mob},
              url: 'manage_students/details',
              dataType: "json",
              success: function(data)
              {
                  console.log('Success: ');
                  console.log(data);
                  if(data.user.length)
                  {
                    $("#stu_id").val(data.user[0].stu_id);

                    document.getElementById("name").value = data.user[0].stu_name;
                    $("#name").prop("readonly", true);
                    document.getElementById("email").value = data.user[0].email;
                    $("#email").prop("readonly", true);
                    document.getElementById("aadhar").value = data.user[0].aadhar_no;
                    $("#aadhar").prop("readonly", true);
                    document.getElementById("qual").value = data.user[0].qual;
                    $("#qual").prop("readonly", true);
                    document.getElementById("dob").value = data.user[0].date_of_birth.split('T')[0];
                    $("#dob").prop("readonly", true);
                  }
              }
           });
         }
         else {
            var message = document.getElementById('message');
            message.innerHTML = "10 digits required, match requested format!"

             $("#stu_id").val('0');
             $("#name").val(null);
             $("#email").val(null);
             $("#aadhar").val(null);
             $("#dob").val(null);
             $("#qual").val(null);

             $("#name").prop("readonly", false);
             $("#email").prop("readonly", false);
             $("#aadhar").prop("readonly", false);
             $("#qual").prop("readonly", false);
         }
      });

  </script>
