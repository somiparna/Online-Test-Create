<script>
  
  $('#exam').dropdown({
    clearable: true
  });

  $('#setter_list').hide();


  $(document).ready(function(){
    $("#myFunction").click(function(){
      $("#setter_list").toggle(800);
    });
  });
  
  
  $(document).on("change", '#exam', function(e) {
      var exam = $(this).val();
      $.ajax({
          type: "POST",
          data: {exam: exam},
          url: 'manage_users/option',
          dataType: "json",
          success: function(data){
            console.log('Success: ');
            console.log(data.user[0].sub_name);
            var arr=data.user[0].sub_name.split(",");
            console.log(arr);
            var arr2=[];
            for(var i=0;i<arr.length;i++)
            {
              <%for(var j=0;j< subject.length;j++)
              {%>
                if(arr[i]== <%=subject[j].sub_id%>)
                arr2[i]= "<%=subject[j].sub_name%>";
              <%}%>
            }
            console.log(arr2);

            target = $('#multi-select');
            $(target).empty();

            list = document.getElementById( 'multi-select' );
            for(var i=0;i< arr.length;i++)
            {
                list.options[i] = new Option(arr2[i], arr[i]);
            };
          }
      });
  });
  
  
      $("#mob").keyup(function(){
             var mob = $(this).val();
             if(mob.length==10)
             {
               var message = document.getElementById('message');
               message.innerHTML = "";
               $.ajax({
                  type: "POST",
                  data: {mob: mob},
                  url: 'manage_users/details',
                  dataType: "json",
                  success: function(data)
                  {
                      console.log('Success: ');
                      console.log(data);
                      if(data.user.length)
                      {
                        $("#user_id").val(data.user[0].user_id);
  
                        document.getElementById("user_name").value = data.user[0].name;
                        $("#user_name").prop("readonly", true);
                        document.getElementById("profession").value = data.user[0].profession;
                        $("#profession").prop("readonly", true);
                        document.getElementById("aadhar").value = data.user[0].aadhar_no;
                        $("#aadhar").prop("readonly", true);
                        document.getElementById("username").value = data.user[0].user_name;
                        $("#username").prop("readonly", true);
                        document.getElementById("pass").value = data.user[0].password;
                        $("#pass").prop("readonly", true);
                      }
                  }
               });
             }
             else {
                var message = document.getElementById('message');
                message.innerHTML = "10 digits required, match requested format!"
  
                 $("#user_id").val('0');
                 $("#user_name").val(null);
                 $("#profession").val(null);
                 $("#aadhar").val(null);
                 $("#username").val(null);
                 $("#pass").val(null);
  
                 $("#user_name").prop("readonly", false);
                 $("#profession").prop("readonly", false);
                 $("#aadhar").prop("readonly", false);
                 $("#username").prop("readonly", false);
                 $("#pass").prop("readonly", false);
             }
          });
  </script>


