      <div class="content">
        <div class="row">
          <div class="col-md-12">
            <div class="card ">
              <div class="card-body ">
                <form method="POST" action="/manage_users">
                  <% if ( msg.length > 0 ) { %>
                    <p>Message: <%= msg %> </p>
                  <% } %>
                  <input type="hidden" name="user_id" id="user_id" value="0">
                  <div class="row">
                    <div class="col-md-6">
                  <label>Enter the Mobile Number</label>
                  <div class="form-group">
                    <input class="form-control" placeholder="Enter the Mobile Number" name="mob" id="mob" type="number" required autofocus><span id="message"></span>
                  </div>
                </div>
                <div class="col-md-6">
                  <label>Set Username</label>
                  <div class="form-group">
                    <input class="form-control" placeholder="Username" name="username" id="username" type="text" required>
                  </div>
                </div>
              </div>
              <div class="row">
                    <div class="col-md-6">
                  <label>Enter the name of the setter</label>
                  <div class="form-group">
                  <input class="form-control" placeholder="Enter the name" name="name" id="user_name" type="text" required>
                </div>
                </div>
                <div class="col-md-6">
                 <label>Set Password</label>
                  <div class="form-group">
                    <input class="form-control" placeholder="Password" name="password" type="password" id="pass" required>
                  </div>
                </div>
              </div>
              <div class="row">
                    <div class="col-md-6">
                  <label>Enter the Profession</label>
                  <div class="form-group">
                    <input class="form-control" placeholder="Enter the profession" id="profession" list="profession" name="profession">
                  </div>
                </div>
                <div class="col-md-6">
                  <label>Set Exam</label></br>
                  <select class="selectpicker" name="exam" id="exam" data-style="btn btn-primary btn-round" required>
                    <option disabled selected>Select Exam</option>
                    <% if(exam.length){
                       for(var i = 0;i < exam.length;i++) { %>
                       <option required value="<%=exam[i].exam_id%>"><%=exam[i].exam_name%></option>
                      <% }
                    } %>
                  </select>
                </div>
              </div>
               <div class="row">
                    <div class="col-md-6">
                  <label>Enter the Aadhaar Number</label><br>
                   <div class="form-group">
                    <input class="form-control" placeholder="Enter the Aadhar Number" id="aadhar" name="aadhar" type="text" required>
                  </div>
                </div>
                <div class="col-md-4"> 
                  <label for="select2-multiple-input-sm" class="control-label">Enter the subject(s) assigned</label>
				          <select id="multi-select" name="subject" class="form-control input-sm select2-multiple" multiple>
                  </select>
                </div>
              </div>
              <div class="card-footer text-center">
                <button type="submit" class="btn btn-fill btn-primary">Add Setter</button>
              </div>
                </form>
              </div>
            </div>
          </div>
          <div class="col-md-12">
            <button type="submit" id="myFunction" class="btn btn-fill btn-primary">View Setter</button>
          </div>
        </div>

        <div id="setter_list" class="col-md-12 col-lg-12" style="margin-top: 30px;">
          <div class="card">
            <div class="card-header">
              <h4 class="card-title">Test Setters List</h4>
            </div>
            <div class="card-body">
              <div class="toolbar">
                <!--        Here you can write extra buttons/actions for the toolbar              -->
              </div>
              <table class="table table-striped table-bordered" width="100%" cellspacing="0">
                <thead>
                  <tr>
                  <th>User Id</th>
                  <th>Full Name</th>
                  <%if(type==0){%>
                    <th>Client Name</th>
                  <%}%>
                  <th>Mobile Number</th>
                  <th>Aadhar Number</th>
                  <th>User Name</th>
                  <th>User Password</th>
                  </tr>
                </thead>
                <tfoot>
                  <tr>
                    <th><strong>User Id</strong></th>
                    <th><strong>Full Name</strong></th>
                    <%if(type==0){%>
                      <th><strong>Client Name</strong></th>
                    <%}%>
                    <th><strong>Mobile Number</strong></th>
                    <th><strong>Aadhar Number</strong></th>
                    <th><strong>User Name</strong></th>
                    <th><strong>User Password</strong></th>
                  </tr>
                </tfoot>
                <tbody>
                  <%if(users.length){
                    for(var i = 0;i < users.length;i++) { %>
                      <tr>
                        <td><%=users[i].user_id%></td>
                        <td><%=users[i].name%></td>
                        <%if(type==0){%>
                          <% if(users[i].client_id==0){%>
                            <td>Admin</td>
                          <%}%>
                          <%if(users[i].client_id!=0){%>
                              <%for(var j=0;j< name.length;j++){%>
                                <%if(name[j].client_id==users[i].client_id){%>
                                    <td><%=name[j].client_name%></td>
                                <%}
                              }
                            }%>
                        <%}%>
                        <td><%=users[i].mob_no%></td>
                        <td><%=users[i].aadhar%></td>
                        <td><%=users[i].username%></td>
                        <td><%=users[i].password%></td>
                      </tr>
                    <% }
                  } %>
                </tbody>
              </table>
